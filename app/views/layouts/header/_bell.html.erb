<% if current_or_guest_user.guest? %>

    <div class="bell-wrapper p-0-15">
      <span id="bell" class="glyphicon glyphicon-bell green-dark-font font-fixed-28 has-popover-click pointer" title="Notificações" data-placement="bottom" data-content="<%= "#{render 'newsfeed/friends_requests'}" %>" html="true"></span>
    </div>

<% else %>

    <% if current_user.requested_friendships_notifies.blank? %>
        <div class="Button Button--navbar p-0-15 has-popover-click" data-placement="bottom" data-content="<%= "#{render 'newsfeed/friends_requests'}" %>" html="true">
          <span id="bell" class="glyphicon glyphicon-bell font-fixed-28" title="Notificações"></span> Notificações
        </div>
    <% else %>
        <div class="Button Button--navbar p-0-15 has-popover-click is-active" data-placement="bottom" data-content="<%= "#{render 'newsfeed/friends_requests'}" %>" html="true">
          <span id="bell" class="glyphicon glyphicon-bell font-fixed-28 is-ring" title="Notificações"></span> Notificações
        </div>
    <% end %>

<% end %>