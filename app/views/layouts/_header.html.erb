
<%= render 'feedbacks/modal' %>
<%= render 'layouts/modal_login' %>

<div class="Navbar">

  <div class="row">

    <div class="col-lg-2 col-md-3 col-sm-3 col-xs-2">
      <div class="Navbar-logo">
        <% if current_or_guest_user.guest? %>
            <%= link_to welcome_path do %>
                <%= image_tag 'logo.png', title: 'Eventos e atividades na cidade', alt: "logo cidadevocê" %>
            <% end %>
        <% else %>
            <%= link_to root_path do %>
                <%= image_tag 'logo.png', title: 'Eventos e atividades na cidade', alt: "logo cidadevocê" %>
            <% end %>
        <% end %>
      </div>

      <div class="Navbar-sandwichButton js-showSidebarLeftFixed">

      </div>
    </div>


    <div class="col-lg-7 col-md-6 col-sm-5 col-xs-4">

      <div class="Navbar-bell p-20-0 pull-right">
        <%= render 'layouts/header/bell' %>
      </div>

      <ul class="Navbar-links hidden-xs">
        <% if current_or_guest_user.guest? %>
            <li><%= link_to "Início", root_path, class: "page-selected" %></li>
            <li><a onclick="Villeme.Ux.loginModal('Você precisar estar logado para criar um evento.')" class="unlogged">Postar item</a></li>
        <% else %>
            <li><%= link_to "Início", root_path, class: "page-selected" %></li>
            <li><%= link_to 'Postar item', new_item_path %></li>
        <% end %>

      </ul>



    </div>


    <!-- Links and Avatar -->
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6" style="padding: 0 0 0 30px">
      <% if GAMIFICATION  %>
          <%= render 'layouts/header/avatar' %>
      <% end %>
    </div>

  </div>

  <div class="header-shadow"></div>

</div>
