<!-- Variables from backend -->
<%= include_gon %>

<!-- Application -->
<%= javascript_include_tag 'application' %>

<!-- TODO: Organiza the code to working with async JS loads -->
<script src='https://maps.google.com/maps/api/js'></script>


<!-- Dependencies -->
<% if content_for?(:javascript_load_dependencies) %>
    <%= yield :javascript_load_dependencies %>
<% end %>

<!-- Mount Riot Components -->
<% if content_for?(:mount_riot_components) %>
    <%= yield :mount_riot_components %>
<% end %>

<!-- Content - essential to show something very important -->
<% if content_for?(:javascript_load_inline) %>
    <script type="text/javascript">
        <%= yield :javascript_load_inline %>
    </script>
<% end %>

<!-- Content -->
<% if content_for?(:javascript_load_content) %>
    <%= yield :javascript_load_content %>
<% end %>
