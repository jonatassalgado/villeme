
<div class="modal js-ModalLogin fade" tabindex="-1" role="dialog" aria-labelledby="modal" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="Modal Modal--centralized">

      <div class="modal-header">
        <span type="button" class="Modal-closeButton" data-dismiss="modal" aria-hidden="true">&times;</span>
        <h4 class="modal-title u-centralize"><b>Entrar ou solicitar convite</b></h4>
      </div>

      <div class="Modal-body">
        <div class="Modal-alert js-Modal-alert u-centralize">
          <span class="glyphicon glyphicon-info-sign"></span>
          <span class="js-ModalLogin-alert"></span>
        </div>

        <%= link_to welcome_path do %>
            <div class="Button Button--primary Button--large u-centralize u-margin-0-0-15-0">
              <%= t('welcome.first_screen.request_invite') %>
            </div>
        <% end %>

        <span>ou <%= link_to 'entre com o <b>facebook</b>'.html_safe, user_omniauth_authorize_path(:facebook), class: 'u-fake-link has-tooltip', title: t('welcome.tooltip.have_an_invitation'), 'data-placement' => 'bottom' %></span>
      </div>

    </div>
  </div>
</div>