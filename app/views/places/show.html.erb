
<%= stylesheet_link_tag 'suit-components-grid/index.css', 'suit-utils-size/index.css', 'suit-utils-position/index.css', 'modules/Event' %>

<div class="PlaceSingle">


  <!-- =Events -->

  <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
    <div class="row">
      <div class="col-lg-12">
        <div id="main-content" class="Main ps-container">
          <items-section id="places-events"></items-section>
        </div>
      </div>
    </div>
  </div>




</div>


<!-- JS/CSS SECONDARIES -->

<%= stylesheet_link_tag params[:controller] %>

<%= include_gon %>

<%= javascript_load_dependencies([params[:controller]]) %>

<% content_for :mount_riot_components do %>
    <script type="text/javascript">
        $(document).on('ready page:done onpopstate', function(){
            riot.mount('#places-events', {
                data: {
                    title: "<%= @title %>",
                    items: <%= raw @items.to_json %>,
                    count: <%= @items.count %>
                }
            });
        })
    </script>
<% end %>