<div class="panel-heading">
	<div class="panel-title">
		<h2>Fazer login</h2>
	</div>
</div>

<div class="panel-body">

	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), defaults: {input_html: {class: "form-control"}, wrapper_html: {class: "form-group"}}) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :email, :required => false, :autofocus => true %>
	    <%= f.input :password, :required => false %>
	    <%= f.input :remember_me, input_html:{class: ''}, wrapper_html: {class: ''}, :as => :boolean if devise_mapping.rememberable? %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, 'Entrar', class: 'Button Button--large Button--primary pull-right' %>
	  </div>
	<% end %>

</div>

<div class="panel-footer">
	<%= render 'devise/shared/links' %>
</div>
