<div class="panel-heading">
  <h2>Registrar</h2>
</div>

<div class="panel-body">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: {input_html: {class: 'form-control'}, wrapper_html: {class: 'form-group'}}) do |f| %>
    <%= f.error_notification %>
  
    <div class="form-inputs">
      <%= f.input :name, label: 'Nome', required: true, autofocus: true %>
      <%= f.input :email, label: 'Email', required: true %>
      <%= f.association :personas, as: :check_boxes, label: 'Perfil', prompt: t('welcome.modal.persona_identify'), if: @user.personas.size <= 1 %>
      <%= f.input :address, label: 'EndereÃ§o', required: true %>
      <%= f.input :password, label: 'Senha', required: true %>
      <%= f.input :password_confirmation, label: 'Confirmar senha', required: true %>
    </div>
    
    <div class="form-actions">
      <%= f.button :submit, 'Criar conta', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

<div class="panel-footer">
  <%= render 'devise/shared/links' %>
</div>
