<section class="Section">
  <div class="Section-header">
    <h1 class="Section-title">Todos os eventos agendados</h1>
    <span class="Section-description"></span>
  </div>

  <div class="Grid Grid--withGutter">
    <%= render 'alert_none_events' %>

    <% if current_or_guest_user.guest? %>
        <%= render 'events_for_guest', events: @events[:scheduled] %>
    <% else %>
        <%= render 'event', events: @events[:scheduled] %>
    <% end %>

    <%= render 'alert_create_new_event', events: @events[:scheduled] %>
  </div>
</section>

