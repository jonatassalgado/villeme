<% cache [cache_key_for_events, params], expires: 15.minutes do %>

    <!-- HEAD -->

    <%= stylesheet_link_tag 'suit-components-grid/index.css', 'suit-utils-size/index.css', 'suit-utils-position/index.css', 'modules/Event' %>
    <%= javascript_load_inline(['bLazy/blazy']) %>

    <!-- MAIN -->

    <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
      <div class="row">
        <div class="col-lg-12">

          <div id="main-content" class="Main ps-container">

            <section class="Section">

              <div class="Section-header">
                <h1 class="Section-title"><%= @text %></h1>
                <span class="Section-description"></span>
              </div>

              <div class="Grid Grid--withGutter">

                <%= render 'alert_none_events', items: @items %>

                <%= render 'item', events: @items %>

              </div>
            </section>

          </div>
        </div>

      </div>
    </div>


    <!-- SIDEBAR -->

    <div class="col-lg-3 col-md-3 col-sm-4 hidden-xs u-margin-95-0">
      <%= render 'sidebar' %>
    </div>

<% end %>


<!-- JS/CSS SECONDARIES -->

<%= stylesheet_link_tag 'modules/AlertCreateEvent', 'modules/AvatarPhoto', params[:controller] %>

<%= include_gon %>
<%= javascript_load_dependencies(['gmap3'], sync: false) %>
<%= javascript_load_content(['gmaps-builder-user', params[:controller]], sync: false) %>