

<!-- HEAD -->

<%= stylesheet_link_tag 'suit-components-grid/index.css', 'suit-utils-size/index.css', 'suit-utils-position/index.css', 'modules/Event' %>


<!-- MAIN -->

<div class="u-lg-size2of12 u-md-size2of12 u-sm-size2of12 u-floatLeft">
  <sidebar-left city="<%= @city %>"></sidebar-left>
</div>

<div class="u-lg-size7of12 u-md-size9of12 u-sm-size9of12 u-floatLeft">
  <div id="main-content" class="Main ps-container">
    <items-section resource="<%= @resource %>"
                   city="<%= @city %>"
                   params="<%= @params %>"
                   :api="<%= @api %>"
                   :data="<%= @data %>"></items-section>
  </div>
</div>


<!-- SIDEBAR -->

<div class="u-lg-size3of12 u-md-size3of12 u-sm-size4of12 u-floatRight">
  <sidebar-map city="<%= params[:city] %>"
               params="<%= @params %>"></sidebar-map>
</div>




<!-- JS/CSS SECONDARIES -->

<%= stylesheet_link_tag params[:controller] %>

<%= include_gon %>

<%= javascript_load_content 'components/newsfeed-build.js' %>
<%= javascript_load_dependencies([params[:controller]]) %>
